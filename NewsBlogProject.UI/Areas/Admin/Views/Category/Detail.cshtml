@model GetCategoryDetailVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>DETAiL</h1>

<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-sm-12">
            <div class="box">

                <div class="box-header">
                    <h4 class="card-title">Name:@Model.CategoryName</h4>
                </div>

                <div class="box-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th><h4>Id:@Model.Id</h4></th>
                                
                            </tr>
                        </thead>
                        <tbody>
                          
                                <tr>
                                    <td>
                                        <h4>CategoryName: @Model.CategoryName</h4>
                                        <h4>Description: @Model.Description</h4>
                                        <h4>Status: @Model.Status</h4>
                                        <h4>CreateDate: @Model.CreateDate</h4>
                                        
                                    </td>
                                    
                                </tr>

                           
                        </tbody>
                    </table>
                </div>

                <div class="box-footer">
                    <a asp-action="List" class="btn btn-block btn-primary">Choose New Category</a>
                </div>
            </div>
        </div>
    </div>
</div>
