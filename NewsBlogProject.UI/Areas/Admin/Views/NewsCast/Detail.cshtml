@model GetNewsCastDetailVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="row"
<div class="col-md-6">
    <!-- Box Comment -->
    <div class="box box-widget">
        <div class="box-header with-border">
            <div class="user-block">
                <img class="img-circle" src="@Model.UserImmage"  width="60" alt="User Image">
                <span class="username"><a href="#">@Model.UserFullName.</a></span>
                <span class="description">Shared publicly - @Model.CreateDate</span>
            </div>
            <!-- /.user-block -->

            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <img class="img-responsive pad" src="@Model.Image" alt="Photo">

            <p>@Model.Title</p>
            <p>@Model.Content</p>
            <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button>
            <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
            <a asp-controller="NewsCast" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Read More...</a>
            <span class="pull-right text-muted">@Model.LikeCount likes - @Model.CommentCount comments</span>
        </div>
        <!-- /.box-body -->
        <div class="box-footer box-comments">
            @foreach (var item in Model.Comments)
            {
                <div class="box-comment">
                    <!-- User image -->
                    <img class="img-circle img-sm" src="@item.UserImage" alt="User Image">

                    <div class="comment-text">
                        <span class="username">
                           @item.Fullname
                            <span class="text-muted pull-right">@item.CreateDate.</span>
                        </span><!-- /.username -->
                       @item.Text
                    </div>
                    <!-- /.comment-text -->
                </div>
            }



            <!-- /.box-comment -->
        </div>
        <!-- /.box-footer -->
        <div class="box-footer">
            <form action="#" method="post">
                <img class="img-responsive img-circle img-sm" src="../dist/img/user4-128x128.jpg" alt="Alt Text">
                <!-- .img-push is used to add margin to elements next to floating images -->
                <div class="img-push">
                    <input type="text" class="form-control input-sm" placeholder="Press enter to post comment">
                </div>
            </form>
        </div>
        <!-- /.box-footer -->
    </div>
    <!-- /.box -->
</div>
</div>