@model List<GetNewsCastVM>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-sm-12">
            <div class="box">

                <div class="box-header">
                    <h4 class="card-title">List of NewsCast</h4>
                </div>

                <div class="box-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>CategoryName</th>
                                <th>UserFullName</th>
                                <th>Update</th>
                                <th>Delete</th>
                                <th>Detail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetNewsCastVM news in Model)
                            {
                                <tr>
                                    <td>@news.Id</td>
                                    <td>@news.Title</td>
                                    <td>@news.Content</td>
                                    <td>
                                        <img src="@news.Image" width="60" />

                                    </td>
                                    <td>@news.CategoryName</td>
                                    <td>@news.UserFullName</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@news.Id" class="btn btn-sm btn-warning">Update</a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@news.Id" class="btn btn-sm btn-primary">Delete</a>
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@news.Id" class="btn btn-sm btn-success">Detail</a>
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

                <div class="box-footer">
                    <a asp-action="Create" class="btn btn-block btn-primary">create new news</a>
                </div>
            </div>
        </div>
    </div>
</div>


